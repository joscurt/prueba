{% block body %}
    <div class="row">
        <div class="">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">
                    <b>Hecho!,</b>{{ flashMessage }}
                    <button type="button" class="close" data-dismiss="alert">Ã—</button></div>
                {% endfor %}  

         
            <div class="block">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'role' : 'form', 'action' : path('techgym_agenda')}}) }}

                {% if form_errors(form) %}
                    <div class="error">{{ form_errors(form) }}</div>
                {% endif %}

               
               
               {{ form_rest(form) }}<div class="modal-footer">  
                                <input id="fat-btn" type="submit" data-loading-text="Loading..." class="btn btn-success btn-clean" value="Confirmar" />
                                
                            </div>
               {{form_end(form)}}
                </div>
        </div>

    </div> 

